{
  "name": "with-polymorphic",
  "version": "1.0.0",
  "description": "A Higher Order Component for React that enables polymorphic prop patterns.",
  "keywords": [
    "react",
    "hoc",
    "polymorphic",
    "react-component",
    "react-hoc",
    "typescript",
    "react-typescript",
    "react-js",
    "polymorphic-component",
    "jsx",
    "typescript-component",
    "react-library",
    "component-pattern",
    "component-library",
    "react-pattern",
    "react-utils",
    "react-development"
  ],
  "homepage": "https://github.com/relaxdesign/with-polymorphic",
  "bugs": {
    "url": "https://github.com/relaxdesign/with-polymorphic/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/relaxdesign/with-polymorphic.git"
  },
  "license": "MIT",
  "author": "Joe Takara <anuchit.boonsom@gmail.com>",
  "sideEffects": false,
  "type": "commonjs",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist coverage",
    "clean:build": "rimraf dist",
    "clean:test": "rimraf coverage",
    "eslint": "eslint -c .eslintrc.json \"./src/**/*.{ts,tsx}\"",
    "eslint:fix": "eslint --fix -c .eslintrc.json \"./src/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm run test:coverage && npm run build",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "sort": "npx sort-package-json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.41.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "sort-package-json": "^2.4.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
